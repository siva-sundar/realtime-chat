{{#modal-dialog}}
  <div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Add New Chat</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close" {{action "onClose"}}>
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="modal-body">
    {{#chat-threads-list
      params=(hash _embed="chats")
      resourceName="friend"
      onSelected=(action "onSelected") as |listItem|}}
      <div
       class="row no-gutters px-3 py-2 user-list-item  {{if (equal currentThread.id listItem.thread.id) "active"}}"
       {{action listItem.showChatHistory listItem.thread}}
       >
        <div class="col-3">
          {{svg-jar "user" class="user-profile-icon"}}
        </div>
        <div class="col-6">
          <div><strong>{{listItem.thread.name}}</strong></div>
        </div>
      </div>
    {{/chat-threads-list}}
  </div>
{{/modal-dialog}}
